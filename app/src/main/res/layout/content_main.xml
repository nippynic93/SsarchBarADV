<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <VideoView
            android:id="@+id/mainvideo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <ImageView
            android:id="@+id/fb"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="123dp" />

        <ImageView
            android:id="@+id/cto"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignBottom="@+id/fb"
            android:layout_toLeftOf="@+id/fb"
            android:layout_toStartOf="@+id/fb"
            android:src="@drawable/callto" />

        <ImageView
            android:id="@+id/contUs"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_above="@+id/cto"
            android:layout_alignLeft="@+id/cto"
            android:layout_alignStart="@+id/cto"
            android:layout_marginBottom="23dp"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:src="@drawable/contact"
            android:clickable="true"
            tools:ignore="OnClick" />


        <ImageView
            android:id="@+id/fl"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_above="@+id/contUs"
            android:layout_centerHorizontal="true"
            android:src="@drawable/star" />

        <ImageView
            android:id="@+id/rec"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignTop="@+id/fb"
            android:layout_toEndOf="@+id/fb"
            android:layout_toRightOf="@+id/fb"
            android:src="@drawable/recipe" />

        <ImageView
            android:id="@+id/cart"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@+id/contUs"
            android:layout_toEndOf="@+id/fb"
            android:layout_toRightOf="@+id/fb"
            android:src="@drawable/cart" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="54dp"
            android:src="@drawable/line" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView2"
            android:layout_marginTop="60dp"
            android:layout_toEndOf="@+id/contUs"
            android:layout_toRightOf="@+id/contUs"
            android:text="Your Eggless Bakery"
            android:textColor="#ffffff" />

    </RelativeLayout>

</FrameLayout>